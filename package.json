{
  "dependencies": {
    "cheerio": "^1.0.0",
    "delayed-stream": "^1.0.0",
    "gmail-tester": "^1.3.8",
    "libsodium-wrappers": "^0.7.15",
    "pdf-parse": "^1.1.1",
    "playwright": "latest",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@faker-js/faker": "^9.6.0",
    "@playwright/test": "latest",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^22.13.9",
    "@types/pdf-parse": "^1.1.5",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1",
    "axios": "^1.7.9"
  },
  "scripts": {
    "kill_processes": "src/utils/kill_processes.sh",
    "playwright:ui": "dotenv -e .env -- npx playwright test --ui",
    "playwright:codegen": "npx playwright codegen",
    "playwright:report": "npx playwright show-report",
    "prettier": "prettier --write .",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "check-unused": "ts-prune",
    "check-skipped": "tsx src/utils/check-skipped-tests.ts",

    "test:ikea:prod:all": "PROJECT=ikea ENVIRONMENT=prod npx playwright test --project=ikea-prod-desktop",
    "test:ikea:prod:api": "PROJECT=ikea ENVIRONMENT=prod npx playwright test --project=ikea-prod-desktop tests/ikea/API/",
    "test:ikea:prod:ui": "PROJECT=ikea ENVIRONMENT=prod npx playwright test --project=ikea-prod-desktop tests",
    
    "test:ikea:prod:grep:tags:single": "PROJECT=ikea ENVIRONMENT=prod npx playwright test --project=ikea-prod-desktop --grep @LOCALE",
    "test:ikea:prod:grep:tags:multiple": "PROJECT=ikea ENVIRONMENT=prod npx playwright test --project=ikea-prod-desktop --grep '(?=.*@E2E)(?=.*@LOCALE)'"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
